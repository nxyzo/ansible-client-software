{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "customDatasources": {
    "firefox": {
      "defaultRegistryUrlTemplate": "https://product-details.mozilla.org/1.0/firefox_versions.json",
      "transformTemplates": [
        "{\n  \"releases\": [\n    { \"version\": $$.(LATEST_FIREFOX_VERSION) }\n  ],\n  \"sourceUrl\": \"https://www.mozilla.org/firefox/\"\n}"
      ]
    }
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^win-notepad\\+\\+/defaults/main\\.yml$/"],
      "matchStrings": [
        "latest_version:\\s*\"?(?<currentValue>\\d+(?:\\.\\d+){1,5})\"?"
      ],
      "depNameTemplate": "notepad-plus-plus/notepad-plus-plus",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^win-7zip\\/defaults\\/main\\.yml$/"],
      "matchStrings": [
        "latest_version:\\s*\"?(?<currentValue>\\d+\\.\\d+)(?:\\.\\d+\\.\\d+)?\"?"
      ],
      "depNameTemplate": "ip7z/7zip",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "loose",
      "autoReplaceStringTemplate": "latest_version: \"{{newValue}}.00.0\""
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^win-vlc\\/defaults\\/main\\.yml$/"],
      "matchStrings": [
        "latest_version:\\s*\"?(?<currentValue>\\d+(?:\\.\\d+){1,3})\"?"
      ],
      "depNameTemplate": "videolan/vlc",
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "loose"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^win-winscp\\/defaults\\/main\\.yml$/"],
      "matchStrings": [
        "latest_version:\\s*\"?(?<currentValue>\\d+(?:\\.\\d+)*)\"?"
      ],
      "depNameTemplate": "winscp/winscp",
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "loose"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^win-firefox\\/defaults\\/main\\.yml$/"],
      "matchStrings": [
        "latest_version:\\s*\"?(?<currentValue>\\d+(?:\\.\\d+){1,3})\"?"
      ],
      "depNameTemplate": "firefox",
      "packageNameTemplate": "firefox",
      "datasourceTemplate": "custom.firefox",
      "versioningTemplate": "loose"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["github-tags"],
      "matchPackageNames": ["videolan/vlc", "winscp/winscp"],
      "allowedVersions": "/^\\d+(?:\\.\\d+){1,3}$/"
    }
  ]
}
